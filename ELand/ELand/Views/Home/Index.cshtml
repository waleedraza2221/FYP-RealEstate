                <form role="form" action="@Url.Action("Contact","Home")" method="post" class="contactForm validateIt ct-contactForm--small" data-ajax="#res">
                    <div class="form-group">
                        <div class="ct-form--label--type2">
                            <div class="ct-u-displayTableVertical">
                                <div class="ct-u-displayTableCell">
                                    <div class="ct-input-group-btn">
                                        <button class="btn btn-primary">
                                            <i class="fa fa-envelope-o"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="ct-u-displayTableCell text-center">
                                    <span class="text-uppercase">Feel free to contact us</span>
                                </div>
                              
                            </div>
                        </div>
                        <div class="ct-image--section">
                            <img src="~/Images/questions.jpg" alt="">
                        </div>
                        <div class="ct-form--item">
                            <label id="res"></label>
                             <label>Name</label>
                            <input id="contact_name" type="text" required class="form-control input-lg" name="Name" placeholder="">
                        </div>
                        <div class="ct-form--item">
                            <label>Email</label>
                            <input id="contact_email" type="email" class="form-control input-lg" name="Email">
