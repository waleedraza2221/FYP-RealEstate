</header>
<section>
    <div class="container">
        <form class="ct-formSearch--extended ct-u-marginBottom50" method="get" action="@Url.Action("List","Property")" role="form">
            <div class="form-group ">
                <div class="ct-form--label--type1">
                    <div class="ct-u-displayTableVertical">
                        <div class="ct-u-displayTableCell">
                            <div class="ct-input-group-btn">
                                <button class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="ct-u-displayTableCell text-center">
                            <span class="text-uppercase">Search for property</span>
                        </div>
                    </div>
                </div>
                <div class="ct-u-displayTableVertical ct-u-marginBottom20">
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Property id</label>
                            <input type="text" name="Id" class="form-control input-lg" placeholder="Any">
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Location</label>
                            @Html.DropDownList("CityId", null, "Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })
                        </div>
                    </div>
                 
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Property Status</label>
                            @Html.DropDownList("PropertyStatus", null, "Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Property type </label>
                            @Html.DropDownList("PropertyType", null, "Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })


                        </div>
                    </div>
                </div>
                <div class="ct-u-displayTableVertical ct-slider--row ct-sliderAmount">
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Bedrooms</label>
                            <select name="BedRoom" class="ct-js-select ct-select-lg">
                                <option value="0">Any</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3+</option>
                            </select>
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Bathrooms</label>
                            <select name="BathRoom" class="ct-js-select ct-select-lg">
                                <option value="0">Any</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3+</option>
                            </select>
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <label>Price ($)</label>
                            <input type="text" value="1000" required class="form-control input-lg ct-js-slider-min" placeholder="">
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <input type="text" name="Price" class="slider ct-js-sliderAmount" value="" data-slider-tooltip="hide" data-slider-handle="square" data-slider-min="1000" data-slider-max="500000000" data-slider-step="100000" data-slider-value="[1000,20000000]">
                        <label>Min</label>
                        <label class="pull-right">Max</label>
                    </div>
                    <div class="ct-u-displayTableCell">
                        <div class="ct-form--item">
                            <input type="text" value="20000000" required class="form-control input-lg ct-js-slider-max" placeholder="">
                        </div>
                    </div>
                    <div class="ct-u-displayTableCell">
                     
                    </div>
                    <div class="ct-u-displayTableCell">
                        <button type="submit" class="btn btn-warning text-capitalize pull-right">search now</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="ct-section--products">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="ct-heading ct-u-marginBottom30">
                        <h3 class="text-uppercase">properties</h3>
                        <a href="@Url.Action("List","Property")" class="pull-right"><i class="fa fa-angle-right"></i>View More</a>
                    </div>
                    <div class="row">

                        @foreach (var item in (List<ELand.Models.Property>)ViewBag.Properties) { 


                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="ct-itemProducts ct-u-marginBottom30 ct-hover">
                                @if (item.Purpose.Title == "Sale")
                                {
                                    <label class="control-label sale">
                                        Sale
                                    </label>}
                                else
                                {

                                    <label class="control-label new">
                                        @item.Purpose.Title
                                    </label>
                                }
                                <a href="@Url.Action("Index", "Property", new { id=@item.Id})">
                                    <div class="ct-main-content">
                                        <div class="ct-imageBox">
                                            <img src="~/Images/Property/@item.GlobalId/@item.MainImage" alt=""><i class="fa fa-eye"></i>
                                        </div>
                                        <div class="ct-main-text">
                                            <div class="ct-product--tilte">
                                                @{string s = item.Address; if (item.Address.Length > 12) { s = item.Address.Substring(0, 12); }}@s, @item.City.Name
                                                  </div>
                                            <div class="ct-product--price">
                                                <span>@item.Price PKR</span>
                                            </div>
                                            <div class="ct-product--description">
                                                @{string r = item.Description; if (r.Length > 55) { r = item.Description.Substring(0, 55); }}@r
 </div>
                                        </div>
                                    </div>
                                    <div class="ct-product--meta">
                                        <div class="ct-icons">
                                            <span>
                                                <i class="fa fa-bed"></i> @item.Bed
                                            </span>
                                            <span>
                                                <i class="fa fa-cutlery"></i> @item.Kitchen
                                            </span>
                                        </div>
                                        <div class="ct-text">
                                            <span> Area: <span>@item.Area @item.AreaUnit.Title</span></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</section>
<section class="ct-u-paddingBoth60 ct-js-section" data-bg-color="#f3f3f3">
    <div class="container">
        <div class="ct-heading ct-u-marginBottom30">
