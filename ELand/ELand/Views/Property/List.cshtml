                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <div class="ct-form--item ct-u-marginBoth10">
                                                    <label>Property id</label>
                                                    <input type="text" name="Id" class="form-control input-lg" placeholder="Any">
                                                </div>
                                                <div class="ct-form--item ct-u-marginBottom10">
                                                    <label>Location</label>
                                                    @Html.DropDownList("CityId", null,"Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })
                                                
                                                </div>
                                               
                                                <div class="ct-form--item ct-u-marginBottom10">
                                                    <label>Property Status</label>
                                                    @Html.DropDownList("PropertyStatus", null, "Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })
                                              
                                                </div>
                                                <div class="ct-form--item ct-u-marginBottom10">
                                                    <label>Property type </label>
                                                    @Html.DropDownList("PropertyType", null, "Any", htmlAttributes: new { @class = "ct-js-select ct-select-lg" })


                                                </div>
                                                <div class="ct-u-displayTableVertical ct-slider--row ct-u-marginBottom10">
                                                    <div class="ct-u-displayTableCell">
                                                        <div class="ct-form--item">
                                                            <label>Bedrooms</label>
                                                            <select name="BedRoom" class="ct-js-select ct-select-lg">
                                                                <option value="any">Any</option>
                                                                <option value="1">1</option>
                                                                <option value="2">2</option>
                                                                <option value="3">3+</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="ct-u-displayTableCell">
                                                        <div class="ct-form--item">
                                                            <label>Bathrooms</label>
